<p id="notice"><%= notice %></p>

<h1>Listing Meeseeks</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @meeseeks.each do |meeseek| %>
      <tr>
        <td><%= meeseek.name %></td>
        <td><%= meeseek.address %></td>
        <td><%= meeseek.latitude %></td>
        <td><%= meeseek.longitude %></td>
        <td><%= link_to 'Show', meeseek %></td>
        <td><%= link_to 'Edit', edit_meeseek_path(meeseek) %></td>
        <td><%= link_to 'Destroy', meeseek, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Meeseek', new_meeseek_path %>

<div class="meeseek-finder">
  <h1>Meeseek Finder</h1>
  <%= form_tag meeseeks_path, :method => :get do %>
  <p>
    <%= text_field_tag :search, params[:search], :id => 'geo-input' %>
    <%= submit_tag "Search Near", :name => nil %>
  </p>
  <% end %>
  <h3>Nearby Meeseeks</h3>
  <% @meeseeks.each do |meeseek| %>
  <p>
    <div class="each-meeseek">
      <%= meeseek.name %><br>
      <%= meeseek.address %><br>
      <%= meeseek.distance.round(2) %> miles
    </div>
  </p>
  <% end %>
</div>
